# Handle line endings automatically for files detected as text
# and leave files detected as binary untouched.
* text=auto

#
# The above will handle all files NOT found below
#

# These files will always have CRLF line endings on checkout.
*.sln       text eol=crlf
*.csproj    text eol=crlf
*.vbproj    text eol=crlf
*.vcxproj   text eol=crlf
*.vcproj    text eol=crlf
*.dbproj    text eol=crlf
*.fsproj    text eol=crlf
*.lsproj    text eol=crlf
*.wixproj   text eol=crlf
*.ps1       text eol=crlf
*.cmd       text eol=crlf
*.bat       text eol=crlf

# These files will always have LF line endings on checkout.
*.sh        text eol=lf
*.bash      text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.json      text eol=lf
*.js        text eol=lf
*.html      text eol=lf
*.css       text eol=lf
*.scss      text eol=lf
*.xml       text eol=lf
*.md        text eol=lf
*.txt       text eol=lf
*.py        text eol=lf
.gitattributes text eol=lf
.gitignore     text eol=lf
Dockerfile     text eol=lf
